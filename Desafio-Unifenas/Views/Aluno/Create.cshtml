@model Desafio_Unifenas.Models.Aluno

@{
    ViewData["Title"] = "Cadastro";
}

    <div class="row">
        <h1 style="color:white;margin-top:1rem">Cadastro</h1>
        <div class="col-md-4" style="display: flex; justify-content: center; margin-top: 2rem; background: white; width: 74rem;
    border-radius: 8px; height: 50rem;">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-top:2rem">
                    <label style="color: black;font-size: 1rem;" asp-for="Nome" class="control-label"></label>
                    <input style="height: 3rem; width: 30rem" asp-for="Nome" class="form-control" placeholder="Ex.:Ricardo Almeida dos Santos" />
                </div>
                <div class="form-group">
                    <label style="color: black;font-size: 1rem" asp-for="NomedaMae" class="control-label"></label>
                    <input style="height: 3rem; width: 30rem" asp-for="NomedaMae" class="form-control" placeholder="Ex.:Gisele Almeida" />
                </div>
                <div class="form-group form-group-default required">
                    <label style="color: black;font-size: 1rem" asp-for="DataNasc" class="data"></label>
                    <input style="height: 3rem; width: 30rem" type="text" class="form-control" asp-for="DataNasc" placeholder="Ex.: dd/mm/aaaa" data-mask="00/00/0000" maxlength="10" autocomplete="off">
                </div>
                <div class="form-group">
                    <label style="color: black;font-size: 1rem" asp-for="Cpf" class="control-label"></label>
                    <input style="height: 3rem; width: 30rem" type="text" asp-for="Cpf" class="form-control cpf-mask" placeholder="Ex.: 000.000.000-00">
                    @Html.ValidationMessageFor(m => m.Cpf)
                </div>
                <div class="form-group">
                    <label style="color: black;font-size: 1rem" asp-for="Endereco" class="control-label"></label>
                    <input style="height: 3rem; width: 30rem" asp-for="Endereco" class="form-control" placeholder="Ex.:Henrique Carivaldo de Miranda" />
                </div>
                
                    <div style="background: brown; border-radius: 4rem; padding: 1rem 2rem;" class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-primary" style="background:brown;border:none" />
                    </div>
                    <div class="form-group">
                        <button style="width: 30rem; background: brown; padding: 2rem; border-radius: 8rem">
                            <a  style="text-decoration: none; background: brown; border-radius: 4rem; padding: 1rem; margin-top: 23rem; color: white" 
                        asp-action="Index">Voltar para a lista de alunos</a></button>

                    </div>
            </form>
        </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
