@model Desafio_Unifenas.Models.Aluno

@{
    ViewData["Title"] = "Editar";
}

<div class="row">
    <h1 style="color:white;margin-top:1rem">Editar</h1>
    <div class="col-md-4" style="display:flex;justify-content:center;margin-top:3rem;background:white;width:70rem;border-radius:8px;height:37rem">
        <form asp-action="edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" style="margin-top:2rem" class="control-label"></label>
                <input asp-for="Nome" style="width:30rem" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomedaMae" class="control-label"></label>
                <input asp-for="NomedaMae" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="DataNasc" class="control-label"></label>
                <input type="text" class="form-control" asp-for="DataNasc" placeholder="Ex.: dd/mm/aaaa" data-mask="00/00/0000" maxlength="10" autocomplete="off">
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                
                <input type="text" asp-for="Cpf" class="form-control cpf-mask" placeholder="Ex.: 000.000.000-00">
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
            <div class="form-group">
                 <button style="width: 30rem; background: brown; padding: 2rem; border-radius: 8rem">
                 <a  style="text-decoration: none; background: brown; border-radius: 4rem; padding: 1rem; margin-top: 23rem; color: white" 
                       asp-action="Index">Voltar para a lista de alunos</a></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
